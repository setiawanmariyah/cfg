defaults
auth	on
tls	on
tls_starttls on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile	~/.msmtp.log

account ak
host smtp.yandex.com
port 587
user abdullah@abdullah.today
from abdullah@abdullah.today
passwordeval "echo $(gpg2 --batch -q --decrypt ~/.local/share/misc/abdullah.gpg)"

account default: ak
# vim:ft=msmtp
